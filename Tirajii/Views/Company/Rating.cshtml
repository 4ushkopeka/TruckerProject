@using Tirajii.Models.Company


@model RatingViewModel
<style>
* {
  box-sizing: border-box;
}

body {
  font-family: Arial;
  margin: 0 auto; /* Center website */
  max-width: 233330px; /* Max width */
  padding: 20px;
}

.heading {
  font-size: 25px;
  margin-right: 25px;
}

.fa {
  font-size: 25px;
}

.checked {
  color: orange;
}

/* Three column layout */
.side {
  float: left;
  width: 15%;
  margin-top:10px;
}

.middle {
  margin-top:10px;
  float: left;
  width: 70%;
}

/* Place text to the right */
.right {
  text-align: right;
}

/* Clear floats after the columns */
.row:after {
  content: "";
  display: table;
  clear: both;
}

/* The bar container */
.bar-container {
  width: 100%;
  background-color: #f1f1f1;
  text-align: center;
  color: white;
}
@{
    var fstarper = (Model.Count5*100)/Model.Total;
    var fourstarper = (Model.Count4*100)/Model.Total;
    var threestarper = (Model.Count3*100)/Model.Total;
    var twostarper = (Model.Count2*100)/Model.Total;
    var onestarper = (Model.Count1*100)/Model.Total;
}
/* Individual bars */
.bar-5 {width: @fstarper%; height: 18px; background-color: #04AA6D;}
.bar-4 {width: @fourstarper%; height: 18px; background-color: #2196F3;}
.bar-3 {width: @threestarper%; height: 18px; background-color: #00bcd4;}
.bar-2 {width: @twostarper%; height: 18px; background-color: #ff9800;}
.bar-1 {width: @onestarper%; height: 18px; background-color: #f44336;}
</style>
<span class="heading">Company Rating</span>
@if (Model.AverageRating<1)
{
    <span class="fa fa-star"></span>
<span class="fa fa-star"></span>
<span class="fa fa-star"></span>
<span class="fa fa-star"></span>
<span class="fa fa-star"></span>
}
else if (Model.AverageRating>=1 && Model.AverageRating<2)
{
    <span class="fa fa-star checked"></span>
<span class="fa fa-star"></span>
<span class="fa fa-star"></span>
<span class="fa fa-star"></span>
<span class="fa fa-star"></span>
}
else if (Model.AverageRating>=2 && Model.AverageRating<3)
{
    <span class="fa fa-star checked"></span>
<span class="fa fa-star checked"></span>
<span class="fa fa-star"></span>
<span class="fa fa-star"></span>
<span class="fa fa-star"></span>
}
else if (Model.AverageRating>=3 && Model.AverageRating<4)
{
    <span class="fa fa-star checked"></span>
<span class="fa fa-star checked"></span>
<span class="fa fa-star checked"></span>
<span class="fa fa-star"></span>
<span class="fa fa-star"></span>
}
else if (Model.AverageRating>=4 && Model.AverageRating<5)
{
    <span class="fa fa-star checked"></span>
<span class="fa fa-star checked"></span>
<span class="fa fa-star checked"></span>
<span class="fa fa-star checked"></span>
<span class="fa fa-star"></span>
}
else
{
<span class="fa fa-star checked"></span>
<span class="fa fa-star checked"></span>
<span class="fa fa-star checked"></span>
<span class="fa fa-star checked"></span>
<span class="fa fa-star checked"></span>
}
<p>@Model.AverageRating average based on @Model.Total reviews.</p>
<hr style="border:3px solid #f1f1f1">

<div class="row">
  <div class="side">
    <div>5 star</div>
  </div>
  <div class="middle">
    <div class="bar-container">
      <div class="bar-5"></div>
    </div>
  </div>
  <div class="side right">
    <div>@Model.Count5</div>
  </div>
  <div class="side">
    <div>4 star</div>
  </div>
  <div class="middle">
    <div class="bar-container">
      <div class="bar-4"></div>
    </div>
  </div>
  <div class="side right">
    <div>@Model.Count4</div>
  </div>
  <div class="side">
    <div>3 star</div>
  </div>
  <div class="middle">
    <div class="bar-container">
      <div class="bar-3"></div>
    </div>
  </div>
  <div class="side right">
    <div>@Model.Count3</div>
  </div>
  <div class="side">
    <div>2 star</div>
  </div>
  <div class="middle">
    <div class="bar-container">
      <div class="bar-2"></div>
    </div>
  </div>
  <div class="side right">
    <div>@Model.Count2</div>
  </div>
  <div class="side">
    <div>1 star</div>
  </div>
  <div class="middle">
    <div class="bar-container">
      <div class="bar-1"></div>
    </div>
  </div>
  <div class="side right">
    <div>@Model.Count1</div>
  </div>
</div>
